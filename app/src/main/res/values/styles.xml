<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyBottomNavViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorPrimary</item> <!-- 바탕색 -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="itemTextAppearanceActive">@style/Active</item> <!-- 탭된 아이템의 텍스트 스타일 -->
        <item name="itemTextAppearanceInactive">@style/Inactive</item> <!-- 탭되지 않은 아이템의 텍스트 스타일 -->
    </style>

    <style name="Active">
        <item name="android:textColor">@color/pressed_color</item> <!-- 탭된 아이템의 텍스트 색상 -->
    </style>

    <style name="Inactive">
        <item name="android:textColor">@color/normal_color</item> <!-- 탭되지 않은 아이템의 텍스트 색상 -->
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar.Surface">
        <item name="navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

    <style name="ActionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@android:color/black</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="prefixTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
        <item name="android:textColorHint">@color/secondary_color</item>
    </style>

    <style name="TextInputLayoutExposedDropdownIcon">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_arrow_drop_down_black_24dp</item>
        <item name="endIconTint">@color/secondary_color</item>
    </style>

    <style name="ExposedDropdownMenuStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
    </style>
</resources>